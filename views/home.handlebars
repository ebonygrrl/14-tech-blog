            {{#if posts}}
                {{#if loggedIn}}
                    {{#each posts as |post|}}
                    {{> posts loggedIn=true}}
                    {{/each}}
                {{else}}
                    {{#each posts as |post|}}
                    {{> posts}}
                    {{/each}}
                {{/if}}
            {{else}}                
                {{#if loggedIn}}
                    <p class="text-center">You don't have any posts. <a href="/dashboard">Click here</a> to create your first post.</p>
                {{else}}
                    <p class="mb-3">Please <a href="/login">login</a> or <a href="/signup">sign up</a> to add new posts.</p>
                    {{>login}}
                {{/if}}
            {{/if}}