<body>
    <header class="mb-5">
        <section class="container">
            <div class="row">
                <div class="col-md-3 site-name">
                    <h1>The Tech Blog</h1>
                </div>
                <div class="col-md-9">
                    {{#if loggedIn}}
                    <nav>
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li><a href="/dashboard">Dashboard</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </nav>
                    {{else}}
                    <nav>
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li><a href="/login">Login</a></li>
                            <li><a href="/signup">Sign Up</a></li>
                        </ul>
                    </nav>
                    {{/if}}
                </div>
            </div>
        </section>
    </header>
    <main class="mb-5">
        <section class="container">
            <div class="row">
                <div class="col-md-12">
                    {{{body}}}
                <!-- end col -->
                </div>
            </div>
        </section>
    </main>
    <footer>
        <p class="text-center">The Tech Blog. Built by <a href="https://github.com/ebonygrrl/14-tech-blog">Tori
