                    <div class="card mb-3" data-post="{{id}}">
                        <div class="card-header">
                            {{#if loggedIn}}
                            <h2><a href="/post/{{id}}">{{title}}</a></h2> <span>Posted by {{user.username}} on {{format_date created_at}}</span>
                            {{else}}                            
                            <h2>{{title}}</h2> <span>Posted by {{user.username}} on {{format_date created_at}}</span>
                            {{/if}}
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{content}}
                            </p>
                        </div>
                    </div>