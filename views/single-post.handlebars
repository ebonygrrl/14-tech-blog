                    <div class="card mb-3 single" data-post="{{post.pid}}">
                        <div class="card-header">
                            <h2>{{post.postTitle}}</h2> <span>Posted by {{user}} on {{format_date post.time}}</span>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{post.content}}
                            </p>
                        </div>
                    </div>

                    {{#if addComment}}
                    {{> add-comment}}
                    {{/if}}

                    {{#if viewComments}}
                    {{#each userComment as |comment|}}
                    {{> comments}}
                    {{/each}}
                    {{/if}}